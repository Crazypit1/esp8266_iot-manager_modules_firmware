{
 "configs": [
  
  "/config.live.json",
  "/config.option.json",
  "/config.setup.json"

 ],
 "class":"col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8",
 "content": [
  {
   "type": "h5",
   "title": "{{SSDP}}",
   "class":"alert-warning"
  },
{
   "type": "h4",
   "title": "Device ID: {{chipID}}"
  },
{
   "type": "h4",
   "title": "IP address: {{ip}}"
  },
{
   "type": "hr"
  },
{
"type": "checkbox",
"name":"scenario",
"title": "Включить сценарии",
"action": "/scenario?status=[[scenario]]",
"state": "{{scenario}}"
},
{
   "type": "h6",
   "title": "SCENARIO / Название сенсора / Знак > или < / Значение / ID / rel+номер реле / 1 - вкл, 0 - выкл / push уведомление"
  },
{
   "type":"file",
   "state":"scenario.all.txt",
   "style":"width:100%;height:250px",
   "title": "Сохранить и включить",
   "action": "/scenario?status=1",
   "class":"btn btn-block btn-success"
  },

{
   "type": "hr"
 },
{
   "type": "link",
   "title": "Конфигурация устройства",
   "action": "/page.htm?modules",
   "class": "btn btn-block btn-primary"
  },
  {
   "type": "link",
   "title": "Главная",
   "action": "/page.htm?index",
   "class": "btn btn-block btn-danger btn-sm"
  }
 ]
}
